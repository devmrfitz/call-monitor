{
  "compilerOptions": {
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [ "esnext" ],
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "mods/websdk/"
  ]
}